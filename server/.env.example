# ─────────────────────────────────────────
#  IB Reminder — Environment Variables Template
# ─────────────────────────────────────────
#  Copy this file to .env and fill in your values.
#  Never commit .env to version control.
# ─────────────────────────────────────────

# Flask
FLASK_PORT=5000
FLASK_DEBUG=true

# Database
DB_PATH=ib_reminder.db

# File uploads
UPLOAD_FOLDER=uploads
MAX_UPLOAD_MB=20

# Allowed login emails (comma-separated, no spaces)
ALLOWED_EMAILS=email1@example.com,email2@example.com

# External auth API
AUTH_API_URL=https://myaccount.opofinance.com/client-api/login?version=1.0.0

# Email (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=465
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-app-password-here
